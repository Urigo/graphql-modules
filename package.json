{
  "name": "graphql-modules-platform",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "patch-package",
    "ts:check": "tsc --project tsconfig.json --noEmit",
    "build": "tsc --project tsconfig.json && bob build",
    "test": "jest",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "format": "prettier --write \"packages/**/*.{js,json,css,md,ts,tsx}\"",
    "pr": "changeset",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "benchmark:basic": "NODE_ENV=production ts-node --project tsconfig.app.json benchmark/basic.case.ts",
    "deploy-website": "cd website && yarn && yarn build && mkdir graphql-modules && mv build/* graphql-modules && mv graphql-modules build"
  },
  "devDependencies": {
    "@apollo/federation": "0.33.9",
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@babel/plugin-proposal-decorators": "7.16.7",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@changesets/apply-release-plan": "5.0.1",
    "@changesets/cli": "2.20.0",
    "@graphql-tools/merge": "8.2.1",
    "@types/benchmark": "2.1.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.21",
    "@types/ramda": "0.27.64",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "apollo-server": "3.6.2",
    "apollo-server-express": "3.6.2",
    "artillery": "1.7.9",
    "benchmark": "2.1.4",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "babel-jest": "27.4.6",
    "bob-the-bundler": "1.6.1",
    "chalk": "4.1.2",
    "dataloader": "2.0.0",
    "eslint": "8.8.0",
    "express": "4.17.2",
    "express-graphql": "0.12.0",
    "globby": "11.1.0",
    "graphql": "16.3.0",
    "graphql-subscriptions": "2.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.3.2",
    "patch-package": "6.4.7",
    "prettier": "2.5.1",
    "reflect-metadata": "0.1.13",
    "subscriptions-transport-ws": "0.11.0",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*{js,json,css,md,ts,tsx}": "prettier --write"
  }
}
