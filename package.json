{
  "name": "graphql-modules-platform",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "patch-package",
    "ts:check": "tsc --project tsconfig.json --noEmit",
    "ci:lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" --output-file eslint_report.json --format json",
    "build": "tsc --project tsconfig.json && bob build",
    "test": "jest",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "format": "prettier --ignore-path .gitignore --write \"packages/**/*.{js,jsx,json,css,md,mdx,ts,tsx}\"",
    "pr": "changeset",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "benchmark:basic": "NODE_ENV=production ts-node --project tsconfig.app.json benchmark/basic.case.ts",
    "deploy-website": "cd website && yarn && yarn build && mkdir graphql-modules && mv build/* graphql-modules && mv graphql-modules build"
  },
  "devDependencies": {
    "@apollo/federation": "0.38.1",
    "@babel/core": "7.22.20",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-typescript": "7.22.15",
    "@babel/plugin-proposal-decorators": "7.22.15",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@changesets/cli": "2.26.2",
    "@changesets/changelog-github": "0.4.8",
    "@envelop/graphql-modules": "5.0.1",
    "@graphql-tools/merge": "9.0.0",
    "@graphql-yoga/node": "3.9.1",
    "@types/benchmark": "2.1.3",
    "@types/express": "4.17.17",
    "@types/jest": "27.5.2",
    "@types/node": "18.17.17",
    "@types/ramda": "0.29.4",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "apollo-server": "3.12.1",
    "apollo-server-express": "3.12.1",
    "apollo-datasource-rest": "3.7.0",
    "artillery": "1.7.9",
    "benchmark": "2.1.4",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "babel-jest": "29.7.0",
    "bob-the-bundler": "1.7.3",
    "chalk": "4.1.2",
    "dataloader": "2.2.2",
    "eslint": "8.49.0",
    "express": "4.18.2",
    "express-graphql": "0.12.0",
    "globby": "11.1.0",
    "graphql": "16.8.1",
    "graphql-subscriptions": "2.0.0",
    "graphql-ws": "5.14.0",
    "husky": "8.0.3",
    "jest": "27.5.1",
    "lint-staged": "14.0.1",
    "patch-package": "8.0.0",
    "prettier": "3.0.3",
    "reflect-metadata": "0.1.13",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "ws": "8.14.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.{md,mdx}",
        "options": {
          "semi": false,
          "trailingComma": "none",
          "arrowParens": "avoid"
        }
      }
    ]
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*{js,json,css,md,ts,tsx}": "prettier --write"
  }
}
