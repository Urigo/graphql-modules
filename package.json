{
  "name": "graphql-modules-platform",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && bob build",
    "test": "jest",
    "format": "prettier --write \"packages/**/*.{js,json,css,md,ts,tsx}\"",
    "benchmark:basic": "NODE_ENV=production ts-node --project tsconfig.app.json benchmark/basic.case.ts",
    "deploy-website": "cd website && yarn && yarn build && mkdir graphql-modules && mv build/* graphql-modules && mv graphql-modules build"
  },
  "devDependencies": {
    "@types/benchmark": "1.0.33",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.13",
    "@types/node": "14.6.4",
    "@types/ramda": "0.27.17",
    "apollo-server": "2.17.0",
    "apollo-server-express": "2.17.0",
    "artillery": "1.6.1",
    "benchmark": "2.1.4",
    "bob-the-bundler": "1.1.0",
    "dataloader": "2.0.0",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "15.1.0",
    "graphql-subscriptions": "1.1.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "prettier": "2.1.1",
    "pretty-quick": "2.0.2",
    "reflect-metadata": "0.1.13",
    "subscriptions-transport-ws": "0.9.16",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
