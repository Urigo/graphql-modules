{
  "name": "@graphql-modules/core",
  "version": "0.3.0",
  "homepage": "https://graphql-modules.com/",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts' --format stylish"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@graphql-modules/di": "0.3.0",
    "@graphql-modules/epoxy": "0.3.0",
    "dependency-graph": "0.8.0",
    "graphql-tools": "4.0.3",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "graphql-tag": "2.10.1",
    "jest": "23.6.0",
    "tslint": "5.12.1",
    "typescript": "3.2.4"
  },
  "typings": "./dist/index.d.ts",
  "typescript": {
    "definition": "./dist/index.d.ts"
  },
  "publishConfig": {
    "access": "public"
  }
}
