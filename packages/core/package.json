{
  "name": "@graphql-modules/core",
  "version": "0.7.0",
  "repository": "https://github.com/Urigo/graphql-modules.git",
  "homepage": "https://graphql-modules.com/",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "tsc -m esnext --outDir dist/esnext && tsc -m commonjs --outDir dist/commonjs",
    "test": "jest",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts' --format stylish"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@graphql-modules/di": "0.7.0",
    "apollo-server-caching": "0.3.1",
    "graphql-toolkit": "0.2.9",
    "graphql-tools": "4.0.4",
    "tslib": "1.9.3"
  },
  "peerDependencies": {
    "graphql": "^14.1.1"
  },
  "devDependencies": {
    "@types/leakage": "0.4.0",
    "apollo-cache-inmemory": "1.5.1",
    "apollo-client": "2.5.1",
    "apollo-link-schema": "1.2.2",
    "graphql-tag": "2.10.1",
    "jest": "24.7.1",
    "tslint": "5.15.0",
    "typescript": "3.4.3"
  },
  "sideEffects": false,
  "main": "dist/commonjs/index.js",
  "module": "dist/esnext/index.js",
  "typings": "dist/esnext/index.d.ts",
  "typescript": {
    "definition": "dist/esnext/index.d.ts"
  },
  "publishConfig": {
    "access": "public"
  }
}
